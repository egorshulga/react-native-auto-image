{
  "name": "react-native-autosize-image",
  "version": "0.1.1",
  "description": "react-native image width auto width or height computation",
  "main": "./index.js",
  "typings": "./index.d.ts",
  "scripts": {
    "release": "standard-version && git push --follow-tags && npm publish",
    "release:beta": "standard-version --prerelease beta && git push --follow-tags && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/egorshulga/react-native-autosize-image.git"
  },
  "keywords": [
    "react-native",
    "image",
    "auto-height",
    "auto-wudth",
    "react",
    "images"
  ],
  "author": "vivaxy",
  "license": "MIT",
  "dependencies": {
    "prop-types": "^15.7.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.0.0",
    "@commitlint/config-conventional": "^9.0.0",
    "husky": "^4.0.0",
    "lint-staged": "^10.0.0",
    "prettier": "^2.0.0",
    "react": "^16.12.0",
    "react-native": "^0.63.0",
    "standard-version": "^8.0.0"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-native": "^0.63.0"
  },
  "lint-staged": {
    "**/**.{js,json,md,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "always"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        0,
        "never"
      ]
    }
  }
}
